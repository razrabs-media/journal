{
  "name": "raz.media.web",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "components",
    "components/packages/**"
  ],
  "scripts": {
    "update-schema": "graphql-codegen -c ./codegen.download.yml --require dotenv/config",
    "dev-codegen": "graphql-codegen --watch",
    "dev-next": "next dev",
    "dev": "concurrently -k yarn:dev-codegen yarn:dev-next",
    "prebuild": "graphql-codegen",
    "build": "./node_modules/.bin/next build",
    "start": "./node_modules/.bin/next start",
    "not-work-lint": "next lint",
    "lint": "eslint --ext .ts,.tsx .",
    "pre-commit": "yarn lint-staged",
    "prepare": "husky install",
    "storybook:start": "yarn workspace razrabs-ui start",
    "storybook:build": "yarn workspace razrabs-ui build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "@apollo/client": "3.6.4",
    "@emotion/css": "11.9.0",
    "@emotion/react": "11.9.0",
    "@emotion/styled": "11.8.1",
    "date-fns": "2.28.0",
    "emoji-regex": "10.1.0",
    "gemoji": "7.1.0",
    "graphql": "16.3.0",
    "mdast-util-find-and-replace": "2.1.0",
    "next": "12.1.5",
    "next-with-apollo": "5.3.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-markdown": "8.0.2",
    "react-syntax-highlighter": "15.5.0",
    "remark-gemoji": "7.0.1",
    "remark-gfm": "3.0.1",
    "ua-parser-js": "^1.0.2"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "11.9.2",
    "@feature-sliced/eslint-config": "0.1.0-beta.6",
    "@graphql-codegen/add": "3.1.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/near-operation-file-preset": "2.2.12",
    "@graphql-codegen/schema-ast": "2.4.1",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-operations": "2.4.0",
    "@graphql-codegen/typescript-react-apollo": "3.2.14",
    "@types/node": "17.0.35",
    "@types/react": "18.0.0",
    "@types/react-syntax-highlighter": "13.5.2",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "babel-plugin-inline-react-svg": "2.0.1",
    "concurrently": "7.1.0",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-boundaries": "2.9.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.8",
    "prettier": "2.6.2",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">=16.15.0 <17.0.0"
  }
}
